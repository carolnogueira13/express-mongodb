<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Contato</h1>
            <p class="text-center lead">Crie ou edite seu contato abaixo</p>

            <%- include('includes/messages') %>

            <form action="contato/register" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <div class="form-group">
                  <label for="exampleInputNome">Nome</label>
                  <input value="<%= contato.nome %>" type="text" class="form-control" name="nome" id="exampleInputNome" aria-describedby="nomeHelp" placeholder="Seu nome">
                </div>

                <div class="form-group">
                    <label for="exampleInputSobrenome">Sobrenome</label>
                    <input  value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome" id="exampleInputSobrenome" aria-describedby="sobrenomeHelp" placeholder="Seu sobrenome">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail">E-mail</label>
                    <input value="<%= contato.email %>"  type="email" class="form-control" name="email" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Seu e-mail">
                </div>

                <div class="form-group">
                    <label for="exampleInputTelefone">Telefone</label>
                    <input  value="<%= contato.telefone %>" type="tel" class="form-control" name="telefone" id="exampleInputTelefone" aria-describedby="telefoneHelp" placeholder="Seu telefone">
                </div>
                
                <button type="submit" class="btn btn-primary">Salvar</button>
            </form>

        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer'); %>
